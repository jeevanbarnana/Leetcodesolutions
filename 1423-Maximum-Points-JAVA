class Solution {
    public int maxScore(int[] cardPoints, int k) {
        int n=cardPoints.length;
        int lsum=0;
        int rsum=0;
        int  currsum=0;
        for(int i=0;i<k;i++)
        {
            lsum=lsum+cardPoints[i];
        }
        currsum=lsum;
        int rindex=n-1;
        for(int i=k-1;i>=0;i--)
        {
            lsum=lsum-cardPoints[i];
            rsum=rsum+cardPoints[rindex];
            rindex--;
            currsum=Math.max(currsum,lsum+rsum);
        }
        return currsum;
        
    }
}
